<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.konstanz.schulen.suso.activities.BlogPostActivity">

    <TextView
        android:id="@+id/post_activity_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/post_activity_author"

        android:layout_below="@id/post_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="italic"
        android:paddingLeft="20dp"/>

    <TextView
        android:id="@+id/post_activity_date"

        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/post_activity_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="italic"
        android:paddingRight="20dp"/>

    <TextView
        android:id="@+id/post_activity_body"


        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:layout_below="@id/post_activity_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
