<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/substitution_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">





        <TableLayout
            android:id="@+id/substitution_card_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:padding="25dp">


            <TableRow android:padding="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:text="@string/substcard_hour"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/substitution_card_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="Hour" />
            </TableRow>

            <TableRow android:padding="3dp"
                android:id="@+id/substitution_card_teacher_row">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:text="@string/substcard_teacher"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/substitution_card_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="Teacher" />
            </TableRow>



            <TableRow android:padding="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:text="@string/substcard_subject"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/substitution_card_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="Subject" />
            </TableRow>



            <TableRow android:padding="3dp"
                android:id="@+id/substitution_card_room_row">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:text="@string/substcard_room"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/substitution_card_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="Room" />
            </TableRow>



            <TableRow android:padding="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:text="@string/substcard_comment"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/substitution_card_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    tools:text="Comment" />
            </TableRow>


        </TableLayout>

</android.support.v7.widget.CardView>

