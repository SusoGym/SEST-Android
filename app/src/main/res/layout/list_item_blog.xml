<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_blog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">


        <TextView
            android:id="@+id/blog_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:textSize="25sp"
            tools:text="Title"/>


        <TextView
            android:id="@+id/blog_post_author"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_post_title"

            android:paddingLeft="10dp"
            android:textSize="15sp"
            tools:text="Author"/>

        <TextView
            android:id="@+id/blog_post_date"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/blog_post_author"
            android:layout_alignParentRight="true"

            android:paddingRight="20dp"
            android:textSize="15sp"
            tools:text="Date"/>
</RelativeLayout>